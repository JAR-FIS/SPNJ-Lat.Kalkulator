<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    tools:context="com.example.aral.cobakalkulator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Calculator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/inputan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#b7b7b7"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/hasil"
            android:layout_below="@id/inputan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF930A"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/satu"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="1"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/dua"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/tiga"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#FFAB34"
                android:gravity="center"
                android:text="C"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:weightSum="4">

            <Button
                android:id="@+id/empat"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/lima"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/enam"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/tambah"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#FFAB34"
                android:gravity="center"
                android:text="+"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:weightSum="4">

            <Button
                android:id="@+id/tujuh"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/delapan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/sembilan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/kurang"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#FFAB34"
                android:gravity="center"
                android:text="-"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:weightSum="4">

            <Button
                android:id="@+id/nol"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#b7b7b7"
                android:gravity="center"
                android:text="0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/kali"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#FFAB34"
                android:gravity="center"
                android:text="x"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bagi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#FFAB34"
                android:gravity="center"
                android:text="/"
                android:textSize="25sp" />

            <Button
                android:id="@+id/samadengan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#FF930A"
                android:gravity="center"
                android:text="="
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
